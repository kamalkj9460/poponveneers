@include mq-max($desk) {
    .footer__bottom__left,
    .footer__bottom__right {
        float: none;
    }
    .footer-copyright__span {
        margin-left: 0;
        margin-right: 15px;
    }
}
@include mq-max($tab) {
    .footer__content {
        padding: 30px 0 18px;
    }
    .footer__bottom {
        text-align: center;
    }
    .footer__bottom__left-item {
        margin: 0 0 6px;
        padding: 0;
        &:after {
            content: none;
        }
    }
    .footer__icons {
        width: 100%;
    }
    .footer-copyright__span {
        display: block;
        margin: 0;
    }
}
