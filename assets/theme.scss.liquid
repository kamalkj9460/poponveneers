}
.localize__item__wrapper {
    display: inline-block;
    margin-right: 12px;
    &:last-of-type {
        margin-right: 0;
    }
}
.localize__toggle {
    background: transparent;
    border: none;
    cursor: pointer;
    color: rgba($color--white, .8);
    line-height: 42px;
    span {
        font-size: 1.05rem;
        width: 32px;
        display: inline-block;
    }
    .icon {
        margin-left: 9px;
        position: relative;
        top: -1px;
        font-size: 13px;
        line-height: 0;
    }
    &:hover,
    &.js-active {
        color: $color--white;
        opacity: 1;
    }
}
.localize__items {
    position: absolute;
    bottom: 45px;
    left: auto;
    padding: 0 2px 2px;
    margin: 0;
    background: $color--white;
    border: 1px solid $color--grey-lighter;
    display: block;
    column-count: 2;
    column-gap: 2px;
    min-width: 160px;
    width: min-content;
    opacity: 0;
    visibility: hidden;
    @include transform(translateY(10px));
    @include transition($global-transition);
    &.js-active {
        opacity: 1;
        visibility: visible;
        @include transform(translateY(0));
    }
    &:before {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 22px;
        //triangle
        height: 0;
        width: 0;
        border-top: 10px solid $color--white;
        border-left: 10px solid transparent;
        border-right: 10px solid transparent;
    }
    &:after {
        content: '';
        position: absolute;
        width: 16px;
        height: 16px;
        bottom: -7px;
        left: 24px;
        box-shadow: -1px 1px 2px -2px $color--black;
        @include transform(rotate(-45deg));
    }
}
.localize__item__link {
    font-family: $font--body;
    font-weight: $font--body-weight;
    font-style: $font--body-style;
    font-size: 0.9rem;
    letter-spacing: 0;
    padding: 2px 18px;
    width: 100%;
    white-space: nowrap;
    border: 0;
    margin-top: 2px;
    display: inline-block;
    text-align: center;
    position: relative;
    cursor: pointer;
    color: rgba($color--text,.8);
    &:hover,
    &.selected {
        color: $color--black;
        background: rgba($color--black,.05);
        opacity: 1;
    } 
}
.localize__items--lang {
    column-count: 1;
    column-gap: 0;
    padding: 10px 2px 12px;
    .localize__item__link {
        text-align: left;
    }    
}
.localize--always-center {
    &.localize--single {
        .localize__items:before {
            left: 50%;
            right: unset;
            @include transform(translate(-50%, 0));
        }
        .localize__items:after {
            left: 50%;
            right: unset;
            @include transform(translate(-50%, 0) rotate(-45deg));
        }
    }
    .localize__items {
        left: 50%;
        @include transform(translate(-50%, 10px));
        &.js-active {
            @include transform(translate(-50%, 0));
        }
    }
    .localize__items--currency {
        &:before {
            right: 22px;
            left: unset;
        }
        &:after {
            right: 24px;
            left: unset;
        }
    }
}
@include mq-max($tab) {
    .localize--single {
        .localize__items:before {
            left: 50%;
            right: unset;
            @include transform(translate(-50%, 0));
        }
        .localize__items:after {
            left: 50%;
            right: unset;
            @include transform(translate(-50%, 0) rotate(-45deg));
        }
    }
    .localize__items {
        left: 50%;
        @include transform(translate(-50%, 10px));
        &.js-active {
            @include transform(translate(-50%, 0));
        }
    }
    .localize__items--currency {
        &:before {
            right: 22px;
            left: unset;
        }
        &:after {
            right: 24px;
            left: unset;
        }
    }
}
