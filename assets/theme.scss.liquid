/* ==========================================================================
   #BASIC FORMS
   ========================================================================== */

[type="text"],
[type="password"],
[type="datetime"],
[type="datetime-local"],
[type="date"],
[type="month"],
[type="time"],
[type="week"],
[type="number"],
[type="email"],
[type="url"],
[type="search"],
[type="tel"],
[type="color"],
select,
textarea {
    display: block;
    border-radius: 0;
    height: 48px;
    line-height: 22px;
    padding: 12px;
    color: $color--text;
    vertical-align: middle;
    border: 1px solid $color--grey-lighter;
    width: 100%;
    margin-bottom: 12px;
    cursor: pointer;

    font-family: $font--body;
    font-weight: $font--body-weight;
    font-style: $font--body-style;

    @include transition($global-transition);
    @include appearance(none);

    &::-webkit-input-placeholder,
    &::-moz-placeholder,
    &:-ms-input-placeholder,
    &:-moz-placeholder,
    &:placeholder {
        color: $color--grey;
    }
    
    &:focus,
    &:active {
        color: $color--text;
    }

    // error notification
    &.error,
    &.is-invalid,
    &.input--error {
        border-color: $color--alert-red;
        outline-color: $color--alert-red;
    }

    // success notification
    &.success,
    &.is-valid {
        border-color: $color--alert-green;
        outline-color: $color--alert-green;
    }

    // a disabled input
    &[disabled],
    &.is-disabled {
        cursor: not-allowed;
        opacity: 0.6;
    }
}

form {
    overflow: hidden;
    position: relative;
}

[type="submit"] {
    border: none;
    @include appearance(none);
}

button[disabled] {
    opacity: .6;
    cursor: not-allowed;
    &:hover {
        opacity: .6;
    }
}

textarea {
    max-width: 100%;
    min-height: 120px;
    line-height: 1.5em;
    padding: 10px;
    height: auto;
}

select {
    background: rgba($color--white,.8);
}

fieldset {
    border: 0;
    margin: 0;
    padding: 0;
}

label {
    font-size: 1rem;
    line-height: 1.7em;
}

/* Custom Select dropdown (requires JS to set correct padding)
   ========================================================================== */
.selector-wrapper {
    position: relative;
    &:after {
        content: '\e915';
        font-family: $font--icons;
        position: absolute;
        top: 12px;
        right: 12px;
        font-size: 13px;
        color: rgba($color--black,.4);
        pointer-events: none;
    }
    label {
        color: $color--text;
        font-family: $font--body;
        position: absolute;
        left: 12px;
        top: 0;
        line-height: 48px;
        pointer-events: none;
        &:after {
            content: ' -';
            margin-left: 3px;
        }
    }
    select {
        font-family: $font--body;
        border-color: rgba($color--black,.2);
        @include appearance(none);
        padding-right: 30px;
        padding-left: 82px;//adding temporary padding if JS takes while to kick in
        @include transition(0s);//removing animation because of added JS padding
    }
    select::-ms-expand {
        display: none;
    }
}
/* ==========================================================================
   #TABLES
   ========================================================================== */

table { 
	color: $color--text;
	border-collapse: collapse; 
	border-spacing: 0; 
	width: 100%;
}

td, th { 
	border: 1px solid transparent; /* No more visible border */
	height: 48px; 
	@include transition($global-transition);  /* Simple transition for hover effect */
}

th {
	background: $color--grey-lightest;
	color: $color--text;
	font-weight: 600;
	padding: 0 12px;
	text-align: left;
}

td {
	color: $color--text;
	padding: 0 12px;
}

td.td2 {
  	text-indent: 18px;
}

/* Cells in even rows (2,4,6...) are one color */ 
tr:nth-child(even) td { background: $color--grey-lightest; }   

/* Cells in odd rows (1,3,5...) are another (excludes header cells)  */ 
tr:nth-child(odd) td { background: $color--grey-lighter; }

@include mq-max($tab) {
	.responsive-table thead {
	    display: none;
	}
	.responsive-table tr {
	    display: block;
	}
	.responsive-table tr,
	.responsive-table td {
	    float: left;
	    clear: both;
	    width: 100%;
	}
	.responsive-table th,
	.responsive-table td {
	    display: block;
	    text-align: right;
	    padding: 6px 12px;
	    border: 0;
	    margin: 0;
	    height: auto;
	}
	.responsive-table td::before {
	    content: attr(data-label);
	    float: left;
	    text-align: center;
	    font-size: 0.85rem;
	    padding-right: 12px;
	    margin-top: 6px;
	}
}
/* ==========================================================================
   #LAYOUT SLIDER (extends .o-layout)
   ========================================================================== */

.layout-slider.slick-initialized {
	&.o-layout {
        margin: 0;   
    }
    .o-layout__item {
        padding: 0 9px;
        position: relative;
    }
    &.o-layout--masonry {
        height: auto !important;
        .o-layout__item {
            position: relative !important;
            left: auto !important;
            top: auto !important;
        }
    }
    .layout-slider__more {
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        text-align: center;
    }

	//slick slider plugin styles
    .slick-track {
        @include display(flex);
    }
    .slick-slide {
        height: auto;
    }
	.slick-dots {
		position: relative;
        bottom: 0;
        width: 100%;
        text-align: center;
        li {
            display: inline-block;
            margin: 0 6px;
            width: 9px;
            height: 9px;
            border-radius: 50%;
            background: $color--black;
            opacity: 0.3;
            @include transition($global-transition);
            &.slick-active,
            &:hover,
            &:focus {
                background: $color--brand;
                opacity: 1;
            }
            button {
                padding: 0;
                width: 9px;
                height: 9px;
                border-radius: 50%;
                &:before {
                    content: none;
                }
            }
        }
    }
}
.section--content-light
.section--content-default-light {
    .layout-slider__more-link {
        color: $color--white;
    }
    .layout-slider.slick-initialized .slick-dots li {
        background: $color--white;
        &.slick-active,
        &:hover,
        &:focus {
            background: $color--white
        }
    }
}
/* ==========================================================================
   #PAGINATION (uses shopify - "| default_pagination" )
   ========================================================================== */

.pagination {
    text-align: center;
    .pagination__items {
        display: inline-block;
    }
    .page,
    .next,
    .prev {
        width: 42px;
        height: 42px;
        line-height: 42px;
        float: left;
        margin-left: -1px;
        font-size: 12px;
        border: 1px solid $color--grey-lighter;
        box-sizing: content-box;
